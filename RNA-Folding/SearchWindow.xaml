<Window x:Name="Search_Window" x:Class="RNA_Folding.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RNA_Folding"
        mc:Ignorable="d"
        Title="SearchWindow" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="RNA folding icon.png">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF00FFD1" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Search_For_Button" Content="Search For" HorizontalAlignment="Left" Margin="282,133,0,0" VerticalAlignment="Top" Width="82" Click="Search_For_Button_Click" Height="22"/>
        <Label x:Name="Character_Count" Content="Count: " HorizontalAlignment="Left" Height="23" Margin="282,51,0,0" VerticalAlignment="Top" Width="87" Background="White"/>
        <TextBox x:Name="Search_Box" HorizontalAlignment="Left" Height="177" Margin="16,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" TextChanged="Search_Box_TextChanged"/>

    </Grid>
</Window>
